---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroSection from "@/components/hero";
import ClientShowcase from "@/components/client-showcase";
import FeaturesSection from "@/components/feature";
import PricingSection from "@/components/pricing";
import AboutSection from "@/components/about";
import ClientReviews from "@/components/testimonial";
import FAQSection from "@/components/faq";
import ContactSection from "@/components/contact";
import { Image } from "astro:assets";
---

<BaseLayout>
  <HeroSection client:load>
    <Image src={"/laroslogo.png"} alt="Laros" width={500} height={500} />
  </HeroSection>
  <ClientShowcase client:load />
  <FeaturesSection client:load />
  <PricingSection client:load />
  <AboutSection client:load />
  <ClientReviews client:load />
  <FAQSection client:load />
  <ContactSection client:load />
</BaseLayout>
